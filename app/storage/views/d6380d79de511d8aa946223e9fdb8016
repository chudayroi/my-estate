<?php if(!empty($list)): ?>

<div class="pagination">
   <?php if($currentpage !='1'): ?>
  <a href="<?php echo asset('bat-dong-san'); ?>/<?php echo $data['name']; ?>?page=<?php echo $data['start']; ?>" class="">First</a>
  <?php endif; ?>
  <?php if($currentpage > '1'): ?>
  <a href="<?php echo asset('bat-dong-san'); ?>/<?php echo $data['name']; ?>?page=<?php echo $data['prepage']; ?>" class="prev"><i class="fa fa-arrow-left"></i></a>
  <?php endif; ?>
  <?php for($i=1;$i<=$totalpage;$i++): ?>
  <?php if($i == $currentpage): ?>
  <a class = "currentpage" href="<?php echo asset('bat-dong-san'); ?>/<?php echo $data['name']; ?>?page=<?php echo $i; ?>"><?php echo $i; ?></a> 
  <?php else: ?>
  <a class = "currentpage1" href="<?php echo asset('bat-dong-san'); ?>/<?php echo $data['name']; ?>?page=<?php echo $i; ?>"><?php echo $i; ?></a> 
  <?php endif; ?>
  <?php endfor; ?>
   <?php if($currentpage < $totalpage): ?>
  <a href="<?php echo asset('bat-dong-san'); ?>/<?php echo $data['name']; ?>?page=<?php echo $data['nextpage']; ?>" class="next"><i class="fa fa-arrow-right"></i></a>
  
  <a href="<?php echo asset('bat-dong-san'); ?>/<?php echo $data['name']; ?>?page=<?php echo $data['totalpage']; ?>" class="last">Last</a>
  <?php endif; ?>
</div>
  <?php endif; ?>
